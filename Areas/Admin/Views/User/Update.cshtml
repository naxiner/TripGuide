@model UserRolesViewModel

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Update User</h1>
    </div>
</div>

<div>
    <div class="container">
        <form method="post">
            <input asp-for="UserId" hidden />

            <div class="mb-3">
                <label asp-for="UserName" class="form-label">UserName</label>
                <input type="text" class="form-control" id="username" asp-for="UserName" required>
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input type="text" class="form-control" id="email" asp-for="Email" required>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone</label>
                <input type="text" class="form-control" id="phonenumber" asp-for="PhoneNumber" required>
                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Role</label>
                <select class="form-control" asp-for="Roles">
                    @foreach (var role in Model.AllRoles)
                    {
                        <option value="@role" selected="@Model.Roles.Contains(role)">@role</option>
                    }
                </select>
            </div>

            


            <div class="mb-3 d-flex justify-content-between">
                <button class="btn btn-primary" type="submit">Submit</button>
                <a href="@Url.Action("Update", "User")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>