@model IEnumerable<TripRoute>

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Trip Routes</h1>
    </div>
</div>
<div>
    <div class="pb-3">
        <a class="btn btn-primary" asp-area="Admin" asp-controller="TripRoute" asp-action="Create">
            Create Trip Route
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Route Name</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var tripRoute in Model)
                {
                    <tr>
                        <td>@tripRoute.Id</td>
                        <td>@tripRoute.Name</td>
                        <td><a href="@Url.Action("Update", "TripRoute", new { id = tripRoute.Id })">View</a></td>
                        <td>
                            <form asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@tripRoute.Id" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container">
        <p>No trip routes were found!</p>
    </div>
}